{
    "name": "aungzawpyae/botman-viber-driver",
    "license": "MIT",
    "description": "Viber driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Viber",
        "Messenger"
    ],
    "homepage": "https://github.com/aungzawpyae/botman-viber-driver",
    "authors": [
        {
            "name": "Aung Zaw Pyae",
            "email": "azp.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.1",
        "botman/botman": "~2.8.2",
        "ext-json": "*"
    },
    "require-dev": {
        "botman/studio-addons": "~1.0",
        "illuminate/contracts": "~5.5.0",
        "phpunit/phpunit": "~5.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "TheArdent\\Drivers\\Viber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    },
    "extra": {
        "laravel": {
            "providers": [
                "\\TheArdent\\Drivers\\Viber\\Providers\\ViberServiceProvider"
            ]
        }
    }
}
